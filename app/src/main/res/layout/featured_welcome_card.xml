<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="35dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pink_gradient">

        <ImageView
            android:id="@+id/featured_welcome_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/art_2_edit_flip"
            android:translationX="100dp"
            android:translationY="-10dp"
            android:elevation="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to GET_FIT!"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find out the best workouts for your needs."
                android:layout_marginEnd="150dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="130dp"
                android:textColor="@color/white"
                android:text="Swipe left to see some of our top workout classes." />

            <Button
                android:id="@+id/explore_content_welcome_card_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_design_two_pressed"
                android:text="Explore Workouts"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:elevation="7dp"
                android:paddingHorizontal="10dp" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>