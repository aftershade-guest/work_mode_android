<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.settings.Security.TwoFactorAuthFragment"
    android:padding="20dp">

    <TextView
        android:id="@+id/save_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable two-factor authentication"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/switch_two_factor_auth"
        android:textSize="16sp"
        android:padding="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/muli"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_two_factor_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>