<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".users.settings.SettingsFragment">

    <RelativeLayout
        android:id="@+id/settings_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@color/black"
            android:dividerPadding="5dp"
            android:orientation="vertical"
            android:showDividers="none">

            <RelativeLayout
                android:id="@+id/account_layout_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/btnpressed">

                <ImageView
                    android:id="@+id/account_icon_"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/account_icon"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/account_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/account_icon_"
                    android:fontFamily="@font/muli"
                    android:layout_marginStart="10dp"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/privacy_layout_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/btnpressed">

                <ImageView
                    android:id="@+id/privacy_icon_"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lock_icon"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/privacy_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/privacy_icon_"
                    android:fontFamily="@font/muli"
                    android:layout_marginStart="10dp"
                    android:text="Privacy"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/security_layout_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/btnpressed">

                <ImageView
                    android:id="@+id/security_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/security_icon"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/security_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/security_icon"
                    android:fontFamily="@font/muli"
                    android:layout_marginStart="10dp"
                    android:text="Security"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/help_layout_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/btnpressed">

                <ImageView
                    android:id="@+id/help_icon_"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/help_icon"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/help_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/help_icon_"
                    android:fontFamily="@font/muli"
                    android:layout_marginStart="10dp"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about_layout_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/btnpressed">

                <ImageView
                    android:id="@+id/about_icon_"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/info_icon"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/about_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/about_icon_"
                    android:fontFamily="@font/muli"
                    android:layout_marginStart="10dp"
                    android:text="About"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/theme_layout_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/btnpressed">

                <ImageView
                    android:id="@+id/theme_icon_"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/theme_icon"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/theme_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/theme_icon_"
                    android:fontFamily="@font/muli"
                    android:layout_marginStart="10dp"
                    android:text="Theme"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/muli"
                android:padding="20dp"
                android:text="Log Out"
                android:textColor="@color/light_pink"
                android:background="@color/btnpressed"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>