<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".users.settings.Privacy.PrivacyFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Chats"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-Download Media"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/privacy_auto_download_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:useMaterialThemeColors="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Privacy"
        android:textSize="18sp"
        android:clickable="false"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/privacy_blocked_contact_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Blocked accounts"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/privacy_muted_contact_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Muted accounts"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>