<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="35dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/featured_program_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gym_session"
            android:alpha="0.9"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Featured"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:elevation="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/featured_program_name_card"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Workout Name"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/featured_skill_level_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#0C0C0C"
                android:textSize="20sp"
                android:text="Skill Level" />

            <RatingBar
                android:id="@+id/featured_rating_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:rating="0"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:progressTint="@color/pink" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>