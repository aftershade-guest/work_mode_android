<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/featured_trainer_card_view_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/featured_trainer_profile_pic"
            android:layout_width="90dp"
            android:src="@drawable/image_placeholder_icon"
            android:scaleType="centerCrop"
            android:layout_height="90dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/featured_trainer_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_below="@id/featured_trainer_card_view_profile"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:text="Trainer Name" />

    <TextView
        android:id="@+id/featured_trainer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@id/featured_trainer_full_name"
        android:ellipsize="end"
        android:textSize="12sp"
        android:text="Trainer Name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/featured_trainer_card_view_profile"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="3dp"
        android:layout_marginEnd="5dp"
        android:elevation="12dp"
        android:layout_alignEnd="@id/featured_trainer_card_view_profile"
        android:background="@drawable/white_radius_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/lighter_light_pink"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_baseline_star_24" />

        <TextView
            android:id="@+id/featured_trainer_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="0" />

    </LinearLayout>

</RelativeLayout>